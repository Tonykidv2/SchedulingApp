@model AUWebsite.Models.User

@{
    //ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    //<input class="form-control" id="focusedInput" type="text" value="">
}

<h2>@ViewBag.Title</h2>
@Html.AntiForgeryToken()
@*Looks More Fancy*@
@using (Html.BeginForm("CreateContext", "Login"))
{
    @Html.AntiForgeryToken()
    if (Model.Incorrect)
    {
        <div class="alert alert-dismissible alert-danger">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <strong>Oh snap!</strong> <a href="#" class="alert-link">Change a few things up</a> and try submitting again.
        </div>
    }
        <div>
        <form class="form-horizontal">
            <fieldset>
                <div class="form-group">
                    <h5>User Type</h5>
                    <select class="form-control" id=selected1 value="_type" name="selected1">
                        <option>Student</option>
                        <option>Professor</option>
                        <option>Registar</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="Username" value="_username">Username</label>
                    <input type="text" class="form-control" name ="Username1" placeholder="">
                </div>
                <div class="form-group">
                    <label for="Password" >Password</label>
                    <input type="password" class="form-control" name="Password1" id ="Password" placeholder="">
                </div>
                <h5>Confirm?</h5>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary" id="WhatisClicked">Submit</button>
                    <button type="reset" class="btn btn-default" >Cancel</button>
                </div>
            </fieldset>
        </form>
        </div>
        
    }

