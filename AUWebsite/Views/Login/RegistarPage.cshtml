@model AUWebsite.Models.User
@{
    ViewBag.Title = "RegistarPage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>RegistarPage</h2>
@if (ViewBag.Content != null)
{
    <h3>Welcome! @ViewBag.Content.registar.Person.FirstName @ViewBag.Content.registar.Person.LastName</h3>
}

@if (Model.Incorrect)
    {
        <div class="alert alert-dismissible alert-danger">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <strong>Oh snap!</strong> <a href="#" class="alert-link">Change a few things up</a> and try submitting again.
        </div>
    }
<div>
    @using (Html.BeginForm("ViewMasterCourse", "Login"))
    {
        <button type="submit" class="btn btn-primary" id="WhatisClicked">View Master Schedule</button>
    }
</div>
<div>
    @using (Html.BeginForm("CreateCourse", "Login", FormMethod.Get))
    {
        <button type="submit" class="btn btn-primary" id="WhatisClicked">Create Course</button>
    }
</div>

<div>
    @using (Html.BeginForm("DeleteCourse", "Login"))
    {
        @Html.TextBoxFor(c => c.editedCourse.Name)
        <button type="submit" class="btn btn-primary" id="WhatisClicked">Delete Course</button>
    }
</div>

<div>
    @using (Html.BeginForm("Assign", "Login"))
    {
        <h7>Person:  </h7>
        @Html.TextAreaFor(c=> c.RemoveThisStudent)
        <h7>Course:  </h7>
        @Html.TextAreaFor(c => c.RemovethisCourse)
        <button type="submit" class="btn btn-primary" id="WhatisClicked">Assign Course</button>
    }
</div>
